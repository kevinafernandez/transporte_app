<header id="page-top">
  <div id="myCarousel">
    <div class="carousel fade-carousel slide" data-ride="carousel" data-interval="4000" id="bs-carousel">
      <!-- Overlay -->
      <div class="overlay"></div>
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#bs-carousel" data-slide-to="0" class="active"></li>
        <li data-target="#bs-carousel" data-slide-to="1"></li>
        <li data-target="#bs-carousel" data-slide-to="2"></li>
        <li data-target="#bs-carousel" data-slide-to="3"></li>
      </ol>
      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <div class="item slides active">
          <div class="slide-1"></div>
          <div class="hero">
            <hgroup>
              <h1>Somos Aero-VIP</h1>
              <h3>10 años de experiencia en transportes privados</h3>
            </hgroup>
            <button class="btn btn-hero btn-md" role="button"><%= fa_icon 'car'%></button>
          </div>
        </div>
        <div class="item slides">
          <div class="slide-2"></div>
          <div class="hero">
            <hgroup>
              <h1>Máximo confort</h1>
              <h3>Asientos reclinables y espaciosos</h3>
            </hgroup>
            <button class="btn btn-hero btn-md" role="button"><%= fa_icon 'cog'%></button>
          </div>
        </div>
        <div class="item slides">
          <div class="slide-3"></div>
          <div class="hero">
            <hgroup>
              <h1>Tecnología de última gama</h1>
              <h3>GPS,Bluetooh para toda nuestra flota</h3>
            </hgroup>
          </div>
        </div>
        <div class="item slides">
          <div class="slide-4"></div>
          <div class="hero">
            <hgroup>
              <h1>Somos Aero-VIP</h1>
              <h3>Transportes para pasajeros</h3>
            </hgroup>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
